<% if @post.image.attached? %>
  <%= image_tag @post.image %>
  <% if @post.content %>
  	<p><%= @post.content %></p>
  <% end %>
<% end %>

<% @comments.each do |comment| %>
	<p><%= comment.content %> / <%= link_to(comment.user.name, "/users/#{comment.user.id}") %> - <%= comment.created_at %></p>
<% end %>
<% if flash[:sucsess] %>
	<%= flash[:sucsess] %>
<% end %>
<%= form_with model: Comment.new, url: "/posts/#{params[:id]}/comment", local: true do |form| %>
	<p><%= form.text_field :content %></p>
	<%= form.submit value: "投稿" %>
<% end %>