<% if @post.image.attached? %>
  <%= image_tag @post.image %>
  <% if @post.content %>
  	<p><%= @post.content %></p>
  <% end %>
<% end %>

<% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
	<p><%= link_to("unGood!!", "/likes/#{params[:id]}/destroy", method: "post") %> / <%= @like_count %></p>
<% else %>
	<p><%= link_to("Good!!", "/likes/#{params[:id]}/create", method: "post") %> / <%= @like_count %></p>
<% end %>

<% @comments.each do |comment| %>
	<p><%= comment.content %> / <%= link_to(comment.user.name, "/users/#{comment.user.id}") %> - <%= comment.created_at %></p>
<% end %>
<% if flash[:sucsess] %>
	<%= flash[:sucsess] %>
<% end %>
<%= form_with model: Comment.new, url: "/comments/#{params[:id]}/create", local: true do |form| %>
	<p><%= form.text_field :content %></p>
	<%= form.submit value: "投稿" %>
<% end %>