<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <li><%= link_to("InstaClone", "/") %></li>
      <% if @current_user %>
        <li><%= link_to("新規投稿", "/posts/new") %></li>
        <li><%= link_to("ログアウト", "/logout", method: "post") %></li>
      <% else %>
        <li><%= link_to("新規登録", "/users/new") %></li>
        <li><%= link_to("ログイン", "/login_form") %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
