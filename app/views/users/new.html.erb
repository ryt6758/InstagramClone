<h1>新規登録 - newUser</h1>

<%if flash[:fail] %>
  <%= flash[:fail] %>
<% end %>
<%if flash[:sucsess] %>
  <%= flash[:sucsess] %>
<% end %>

<%= form_with model: @user, url: users_create_url, local: true  do |form| %>
  <%= form.label :email %>
  <p><%= form.email_field :email %></p>
  <%= form.label :password %>
  <p><%= form.password_field :password %></p>
  <%= form.label :name %>
  <p><%= form.text_field :name %></p>
  <%= form.submit %>
<% end %>
